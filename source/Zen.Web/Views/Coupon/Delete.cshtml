@using Zen.Data.Enums;
@model Zen.Data.Entities.Coupon;

@{
    ViewData["Title"] = "Coupon - Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Coupon</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountAmount)
        </dt>
        @switch (Model.DiscountType)
        {
            case DiscountType.Rate:
                <dd class="col-sm-10">
                    % @Html.DisplayFor(model => model.DiscountAmount)
                </dd>
                break;
            case DiscountType.Amount:
            default:
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DiscountAmount) ₺
                </dd>
                break;
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiscountType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MinPurchase)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MinPurchase)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
